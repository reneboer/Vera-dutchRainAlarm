<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <serviceStateTable>
    <stateVariable>
      <name>Location</name>
      <sendEventsAttribute>no</sendEventsAttribute>
      <dataType>string</dataType>
      <defaultValue>Enter an implementation-specific Location string (eg. ZIP Code)</defaultValue>
    </stateVariable>
  </serviceStateTable>
  <actionList>
    <action>
      <name>SetLocation</name>
      <argumentList>
        <argument>
          <name>location</name>
          <direction>in</direction>
        </argument>
      </argumentList>
    </action>
  </actionList>
</scpd>
